<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.Profile.Profile"
    android:background="#000000"> <!-- Thêm màu nền tối -->

    <!-- Ảnh đại diện -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:src="@drawable/profile_placeholder"/>

    <!-- Tên người dùng -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angelina"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="angelina@example.com"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Danh sách các mục -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="8dp">

        <!-- My Ticket -->
        <LinearLayout
            android:id="@+id/btnMyTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:background="#302F2F"
            android:layout_marginBottom="4dp"
            android:radius="12dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_ticket"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My ticket"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Payment History -->
        <LinearLayout
            android:id="@+id/btnPaymentHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:background="#302F2F"
            android:layout_marginBottom="4dp"
            android:radius="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_payment"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment history"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Change Password -->
        <LinearLayout
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:background="#302F2F"
            android:layout_marginBottom="8dp"
            android:radius="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change password"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Select Seat -->
        <LinearLayout
            android:id="@+id/btnSelectSeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:background="#302F2F"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Seat"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>