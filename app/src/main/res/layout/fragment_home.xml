<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.Home.Home">

    <LinearLayout
        android:id="@+id/homeContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black">

        <!-- DÃ²ng Ä‘áº§u: Hi tÃªn ngÆ°á»i dÃ¹ng -->
        <Space
            android:layout_width="0dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tvHi"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="hi, phan táº¥n phÃº ðŸ‘‹"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:layout_marginBottom="4dp" />

        <!-- DÃ²ng dÆ°á»›i: Welcome back -->
        <TextView
            android:id="@+id/tvWelcomeBack"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Now Playing Section -->
        <TextView
            android:id="@+id/tvNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Now Playing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerMovies"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_marginBottom="24dp" />
        <!-- Coming Soon Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coming soon"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all >"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewComingSoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="40dp"
            android:overScrollMode="never"
            android:scrollbars="none" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center" />
        <!-- Visit Cinema Title -->
        <TextView
            android:id="@+id/tvVisitCinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Cinema"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="12dp" />
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="16dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"/>
    </LinearLayout>

</ScrollView>